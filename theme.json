{
	"$schema": "https:\/\/schemas.wp.org\/trunk\/theme.json",
	"version": 2,
	"settings": {
		"appearanceTools": true,
		"color": {
			"defaultPalette": false,
			"palette": [
				{
					"name": "Base",
					"slug": "base",
					"color": "#fff"
				},
				{
					"name": "Contrast",
					"slug": "contrast",
					"color": "#656464"
				},
				{
					"name": "Primary",
					"slug": "primary",
					"color": "#217BF4"
				},
				{
					"name": "Secondary",
					"slug": "secondary",
					"color": "#0A093D"
				}
			]
		},
		"typography": {
			"fontSizes": [
				{
					"name": "Small",
					"slug": "sm",
					"size": "0.875rem"
				}
			],
			"fontFamilies": [
				{
					"fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif",
					"name": "System Font",
					"slug": "system-font"
				},
				{
					"name": "Inter",
					"slug": "inter",
					"fontFamily": "Inter, sans-serif",
					"fontFace": [
						{
							"fontDisplay": "block",
							"fontFamily": "Inter",
							"fontStyle": "normal",
							"fontWeight": "400",
							"src": [
								"file:./assets/fonts/inter/Inter-Regular.woff",
								"file:./assets/fonts/inter/Inter-Regular.woff2"
							]
						},
						{
							"fontDisplay": "block",
							"fontFamily": "Inter",
							"fontStyle": "normal",
							"fontWeight": "500",
							"src": [
								"file:./assets/fonts/inter/Inter-Medium.woff",
								"file:./assets/fonts/inter/Inter-Medium.woff2"
							]
						},
						{
							"fontDisplay": "block",
							"fontFamily": "Inter",
							"fontStyle": "normal",
							"fontWeight": "700",
							"src": [
								"file:./assets/fonts/inter/Inter-Bold.woff",
								"file:./assets/fonts/inter/Inter-Bold.woff2"
							]
						}
					]
				}
			]
		},
		"layout": {
			"contentSize": "840px",
			"wideSize": "1170px"
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--base)",
			"text": "var(--wp--preset--color--contrast)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--inter)",
			"lineHeight": "1.75"
		},
		"elements": {
			"button": {
				"border": {
					"color": "currentColor",
					"radius": "0.875rem",
					"style": "solid",
					"width": "0.063rem"
				},
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--base)"
				},
				"spacing": {
					"padding": {
						"bottom": "1.063rem",
						"left": "2.563rem",
						"right": "2.563rem",
						"top": "1.063rem"
					}
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--sm)"
				}
			},
			"link": { 
				"typography": {
					"textDecoration": "none"
				}
			}
		},
		"blocks": {
			"core/button": {
				"variations": {
					"fill": {
						"shadow": "0px 7px 22px -6px rgba(33, 123, 244, 0.34)"
					},
					"outline": {
						"border": {
							"color": "currentColor",
							"style": "solid",
							"width": "1px"
						},
						"color": {
							"text": "var(--wp--preset--color--primary)"
						},
						"spacing": {
							"padding": {
								"bottom": "1.063rem",
								"left": "2.563rem",
								"right": "2.563rem",
								"top": "1.063rem"
							}
						}
					}
				}
			},
			"core/buttons": {
				"css": "gap: 18px"
			},
			"core/navigation": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--sm)",
					"fontWeight": "500"
				}
			}
		}
	},
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		}
	]
}
